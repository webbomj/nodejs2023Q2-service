// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(uuid())
  login     String
  password  String
  version   Int
  createdAt String
  updatedAt String
}

model Artist {
  id     String  @id @default(uuid())
  name   String
  grammy Boolean @default(false)

  tracks Track[]
  albums Album[]
}

model Track {
  id       String  @id @default(uuid())
  name     String
  artistId String?
  albumId  String?
  duration Int

  artist Artist? @relation(fields: [artistId], references: [id])
  album  Album?  @relation(fields: [albumId], references: [id])
}

model Album {
  id       String  @id @default(uuid())
  name     String
  year     Int
  artistId String?

  tracks Track[]

  artist Artist? @relation(fields: [artistId], references: [id])
}

model Favorite {
  id      Int      @id @default(1)
  albums  String[]
  artists String[]
  tracks  String[]
}
